#sorting an array 
alpha = list()
num = input("Enter the number of elements you want to enter: ")
print("Enter the letters: ")
for i in range(int(num)):
	n = input("Number: ")
	alpha.append(str(n))
print('array: ', alpha)

alpha.sort()
print('sorted array: ', alpha)
